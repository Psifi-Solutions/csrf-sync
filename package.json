{
  "name": "csrf-sync",
  "version": "4.1.0",
  "description": "A utility package to help implement stateful CSRF protection using the Synchroniser Token Pattern in express.",
  "type": "module",
  "main": "./lib/cjs/index.cjs",
  "exports": {
    "require": {
      "types": "./lib/index.d.cts",
      "default": "./lib/cjs/index.cjs"
    },
    "import": {
      "types": "./lib/index.d.ts",
      "import": "./lib/esm/index.js"
    }
  },
  "types": "./lib/index.d.ts",
  "files": ["lib/esm/index.js", "lib/cjs/index.cjs", "lib/index.d.ts", "lib/index.d.cts"],
  "scripts": {
    "clean": "rm -rf ./lib",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "build:types": "tsc --declaration --outDir ./lib --emitDeclarationOnly",
    "build:cjs": "tsc -p tsconfig.cjs.json && mv ./lib/cjs/index.js ./lib/cjs/index.cjs && cp ./lib/index.d.ts ./lib/index.d.cts",
    "build:esm": "tsc -p tsconfig.json",
    "build": "npm run build:types && npm run build:esm && npm run build:cjs",
    "build:clean": "npm run clean && npm run build",
    "pack:clean": "rm -rf *.tgz && npm pack",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "author": "psibean",
  "license": "ISC",
  "homepage": "https://github.com/Psifi-Solutions/csrf-sync",
  "repository": "https://github.com/Psifi-Solutions/csrf-sync",
  "keywords": ["csrf", "middleware", "express", "tokens"],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^18.15.8",
    "@vitest/coverage-istanbul": "3.1.2",
    "commit-and-tag-version": "12.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "3.1.2"
  },
  "dependencies": {
    "http-errors": "^2.0.0"
  }
}
